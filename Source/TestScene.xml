<?xml version="1.0" encoding="utf-8"?>
<Scene xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="PixScene.xsd">
  
  <Options>
    <MaxDepth>4</MaxDepth>
    <DefaultColor>0.0,0.0,0.0</DefaultColor>
    <AntialiasingLevel>1</AntialiasingLevel>
  </Options>
  
  <Camera>
    <PerspectiveCamera Position="0,3,-10" LookAt="0,2,1" Up="0,1,0" ScreenWidth="480" ScreenHeight="320" FieldOfView="1.57079633" />
  </Camera>

  <Materials>
    <MonteCarloDiffuseMaterial Name="GrayDiffuse" Color="0.8,0.8,0.8" />
    <MonteCarloDiffuseMaterial Name="RedDiffuse" Color="0.8,0.0,0.0" />
    <MonteCarloDiffuseMaterial Name="BlueDiffuse" Color="0.0,0.0,0.8" />
  </Materials>

  <Lights>
    <PointLight Color="1,1,1" Position="0,8,-10" />
  </Lights>
  
  <RootGeometry>
    <GeometryGroup>
      <Geometries>
        <Plane MaterialName="GrayDiffuse" Normal="+1,+0,+0" Point="-20,0,0" /> <!-- Left -->
        <Plane MaterialName="GrayDiffuse" Normal="-1,+0,+0" Point="20,0,0" /> <!-- Right -->
        <Plane MaterialName="GrayDiffuse" Normal="+0,+0,-1" Point="0,0,0" /> <!-- Forward -->
        <Plane MaterialName="GrayDiffuse" Normal="+0,+0,+1" Point="0,0,-20" /> <!-- Back -->
        <Plane MaterialName="GrayDiffuse" Normal="+0,-1,+0" Point="0,20,0" /> <!-- Top -->
        <Plane MaterialName="GrayDiffuse" Normal="+0,+1,+0" Point="0,0,0" /> <!-- Bottom -->
        
        <Sphere MaterialName="RedDiffuse" Center="-2,+3,-5" Radius="2" />
        <Sphere MaterialName="BlueDiffuse" Center="+2,+3,-5" Radius="2" />
      </Geometries>
    </GeometryGroup>
  </RootGeometry>
  
</Scene>